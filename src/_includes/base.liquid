            <img src="/images/logo_voice_preview_edition_dark.svg" alt="Home Assistant Voice Preview Edition" />
          </picture>
        </a>
        <ul>
          {% for item in menu %}
          <li>
            <a
              class="{% if item[0] contains page.url %}active{% endif %}"
              href="{{ item[0][0] }}"
              >{{ item[1] }}</a
            >
          </li>
          {% endfor %}
          <li>
            <a
              class="buy-button"
              target="_blank"
              href="https://www.home-assistant.io/voice-pe"
